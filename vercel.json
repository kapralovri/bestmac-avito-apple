{
  "trailingSlash": false,
  "rewrites": [
    { "source": "/sell", "destination": "/api/sell" },
    { "source": "/sell/", "destination": "/api/sell" },
    { "source": "/api/buyout/estimate", "destination": "/api/buyout/estimate" },
    { "source": "/favicon.ico", "destination": "/favicon.png" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.bestmac.ru" }],
      "destination": "https://bestmac.ru/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    }
  ]
}
